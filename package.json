{
  "name": "benana",
  "productName": "Benana",
  "version": "0.1.1",
  "description": "Benana - local-first desktop workspace for Gemini image generation",
  "main": "dist-electron/electron/main.js",
  "author": "Benedikt Grimm",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently -k \"npm:dev:renderer\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:renderer": "vite --port 5173 --strictPort",
    "dev:main": "tsc -p tsconfig.electron.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on tcp:5173 file:dist-electron/electron/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 nodemon --watch dist-electron --ext js,mjs --exec \"electron dist-electron/electron/main.js\"",
    "build": "npm run typecheck && npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.electron.json",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p tsconfig.electron.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --passWithNoTests",
    "preview": "vite preview",
    "dist:mac": "npm run build && electron-builder --mac --publish never"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "better-sqlite3": "^11.10.0",
    "electron-store": "^10.1.0",
    "lucide-react": "^0.564.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.4.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.6"
  },
  "optionalDependencies": {
    "electron-liquid-glass": "^1.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.3.0",
    "nodemon": "^3.1.10",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^6.3.5",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.synaigy.benana",
    "productName": "Benana",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "dist-renderer/**/*",
      "electron/assets/icons/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.graphics-design",
      "icon": "electron/assets/icons/app-icon.png"
    }
  }
}
